<odoo>
    <!-- Odoo 19 Fix: category_id field is no longer supported in res.groups -->
    <record model="res.groups" id="group_vin_vin_auditlog_user">
        <field name="name">Auditlog User</field>
    </record>

    <record model="res.groups" id="group_vin_vin_auditlog_manager">
        <field name="name">Auditlog Manager</field>
        <field name="implied_ids" eval="[(4, ref('vin_auditlog.group_vin_vin_auditlog_user'))]" />
    </record>

    <record id="base.group_system" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('vin_auditlog.group_vin_vin_auditlog_manager'))]"
        />
    </record>
</odoo>
